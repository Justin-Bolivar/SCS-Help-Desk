@{
    ViewData["Title"] = "Add User - SCS Help Desk";
}

<div style="display: flex;">
    <!-- Sidebar -->
    <div style="width: 250px; background-color: #f8f9fa; height: 100vh;">
        <div style="padding: 15px;">
            <img src="~/images/SCS-Logo.png" alt="SCS Logo" style="max-width: 50px; margin-bottom: 10px;">
            <h5 style="margin-bottom: 20px;">SCS HELP DESK</h5>
        </div>
        <div>
            <a href="#" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                DASHBOARD
            </a>
            <a href="#" style="display: block; padding: 10px 15px; text-decoration: none; color: white; background-color: #6c757d;">
                USER LIST
            </a>
            <a href="#" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                KNOWLEDGE BASE
            </a>
            <a href="#" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                TICKETS
            </a>
            <a href="#" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                ACCOUNT SETTINGS
            </a>
            <a href="#" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                LOGOUT
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div style="flex: 1; background: linear-gradient(135deg, #ff6b00 0%, #ffa500 100%); padding: 20px;">
        <div style="background-color: white; border-radius: 15px; padding: 30px; max-width: 800px; margin: 0 auto;">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
                <h2 style="margin: 0;">ADD USER</h2>
                <a href="#" style="padding: 8px 20px; background-color: #f4a460; color: black; text-decoration: none; border-radius: 5px;">Back</a>
            </div>

            <div style="display: flex;">
                <!-- Form Fields -->
                <div style="flex: 1; margin-right: 40px;">
                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 5px; font-weight: bold;">Full Name:</label>
                        <input type="text" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; background-color: #f0f0f0;">
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 5px; font-weight: bold;">Email:</label>
                        <input type="email" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; background-color: #f0f0f0;">
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 5px; font-weight: bold;">Contact Number:</label>
                        <input type="tel" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; background-color: #f0f0f0;">
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 5px; font-weight: bold;">Role:</label>
                        <select style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; background-color: #f0f0f0;">
                            <option value="">Select option</option>
                            <option value="admin">Admin</option>
                            <option value="user">User</option>
                            <option value="support">Support</option>
                        </select>
                    </div>
                </div>

                <!-- Photo Upload Area -->
                <div style="width: 200px; text-align: center;">
                    <div style="width: 150px; height: 150px; margin: 0 auto 20px; background-color: #f0f0f0; border-radius: 50%; display: flex; justify-content: center; align-items: center;">
                        <div style="color: #666;">
                            Add Photo
                        </div>
                    </div>
                </div>
            </div>

            <!-- Buttons -->
            <div style="display: flex; justify-content: flex-end; margin-top: 30px;">
                <button style="padding: 10px 20px; background-color: white; color: #f4a460; border: 1px solid #f4a460; border-radius: 5px; margin-right: 10px; cursor: pointer;">
                    Clear Form
                </button>
                <button style="padding: 10px 20px; background-color: #f4a460; color: black; border: none; border-radius: 5px; cursor: pointer;">
                    Create User
                </button>
            </div>
        </div>
    </div>
</div>