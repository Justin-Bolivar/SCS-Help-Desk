@{
    ViewData["Title"] = "User List - SCS Help Desk";
}

<div style="display: flex; min-height: 100vh;">
    <!-- Sidebar -->
    <div style="width: 250px; background-color: #f8f9fa;">
        <div style="padding: 15px;">
            <img src="~/img/SCS-Logo.png" alt="SCS Logo" style="max-width: 50px; margin-bottom: 10px;">
            <h5 style="margin-bottom: 20px;">SCS HELP DESK</h5>
        </div>
        <div>
            <a href="@Url.Action("Index", "Home")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-grid"></i> DASHBOARD
            </a>
            <a href="@Url.Action("Index", "User")" style="display: block; padding: 10px 15px; text-decoration: none; color: white; background-color: #6c757d;">
                <i class="bi bi-person"></i> USER LIST
            </a>
            <a href="@Url.Action("Index", "KnowledgeBase")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-book"></i> KNOWLEDGE
            </a>
            <a href="@Url.Action("Index", "Tickets")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-ticket"></i> TICKETS
            </a>
            <a href="@Url.Action("Index", "AccountSettings")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-gear"></i> ACCOUNT SETTINGS
            </a>
            <a href="@Url.Action("Logout", "Account")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-box-arrow-right"></i> LOGOUT
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div style="flex: 1; padding: 20px;">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title mb-4">USER LIST</h2>

                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control" placeholder="Search user">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <select class="form-select">
                            <option selected>Role: All</option>
                            <option>Admin</option>
                            <option>User</option>
                            <option>Support</option>
                        </select>
                    </div>
                    <div class="col-md-4 text-end">
                        <a href="@Url.Action("Add", "User")" class="btn btn-warning">
                            <i class="bi bi-plus"></i> Add User
                        </a>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table">
                        <thead class="table-warning">
                            <tr>
                                <th>Name</th>
                                <th>Role</th>
                                <th>Mail</th>
                                <th>Mobile</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Data should be displayed Here -->
                        </tbody>
                    </table>
                </div>

                <nav>
                    <ul class="pagination justify-content-center">
                        <li class="page-item"><a class="page-link" href="#"><i class="bi bi-chevron-left"></i></a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                        <li class="page-item"><span class="page-link">...</span></li>
                        <li class="page-item"><a class="page-link" href="#">9</a></li>
                        <li class="page-item"><a class="page-link" href="#"><i class="bi bi-chevron-right"></i></a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}
