@model List<ASI.Basecode.Data.Models.User>

@{
    ViewData["Title"] = "User List - SCS Help Desk";
}

<div style="flex: 1; padding: 20px;">
    <!-- Main Content -->
    <div style="background-color: white; border-radius: 15px; padding: 30px;">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title mb-4">USER LIST</h2>

                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control" placeholder="Search user">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <select class="form-select">
                            <option selected>Role: All</option>
                            <option>Admin</option>
                            <option>User</option>
                            <option>Support</option>
                        </select>
                    </div>
                    <div class="col-md-4 text-end">
                        <a href="@Url.Action("UserAdd", "User")" class="btn btn-warning">
                            <i class="bi bi-plus"></i> Add User
                        </a>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table">
                        <thead class="table-warning">
                            <tr>
                                <th>Name</th>
                                <th>Role</th>
                                <th>ID Number</th>
                                <th>School email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Name</td>
                                    <td>@user.Role</td>
                                    <td>@user.UserId</td>
                                    <td>@user.Email</td>
                                    <td>
                                        <a href="@Url.Action("Edit", "User", new { id = user.UserId })" class="btn btn-primary">Edit</a>
                                        <a href="#" class="btn btn-danger" onclick="confirmDelete('@user.UserId')">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(userId) {
            if (confirm("Are you sure you want to delete this user?")) {
                window.location.href = '@Url.Action("Delete", "User")?id=' + userId;
            }
        }
    </script>
}