@model ASI.Basecode.Services.ServiceModels.KnowledgeBaseViewModel

<h2>Delete Knowledgebase Article</h2>
<p>Are you sure you want to delete the article titled "<strong>@Model.Title</strong>"?</p>

<!-- Delete Button to Trigger Modal -->
<button id="deleteBtn" class="btn btn-danger">Delete</button>

<!-- Modal for Delete Confirmation -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the article titled "<strong>@Model.Title</strong>"?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <!-- Form for Deletion -->
                <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.ArticleId" id="deleteForm">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap and jQuery for Modal -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {
        // Trigger modal when delete button is clicked
        $('#deleteBtn').click(function () {
            $('#deleteModal').modal('show');
        });

        // Optional: You can handle form submission here or let it be automatically handled
    });
</script>
