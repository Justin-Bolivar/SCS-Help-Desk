@{
    ViewData["Title"] = "Ticket List - SCS Help Desk";
}

<div style="display: flex; min-height: 100vh;">
    <!-- Sidebar -->
    <div style="width: 250px; background-color: #f8f9fa;">
        <div style="padding: 15px;">
            <img src="~/img/SCS-Logo.png" alt="SCS Logo" style="max-width: 50px; margin-bottom: 10px;">
            <h5 style="margin-bottom: 20px;">SCS HELP DESK</h5>
        </div>
        <div>
            <a href="@Url.Action("AdminDashboard", "Admin")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-grid"></i> DASHBOARD
            </a>
            <a href="@Url.Action("UserList", "Admin")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-person"></i> USER LIST
            </a>
            <a href="@Url.Action("Knowledge", "Admin")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-book"></i> KNOWLEDGE BASE
            </a>
            <a href="@Url.Action("Tickets", "Admin")" style="display: block; padding: 10px 15px; text-decoration: none; color: white; background-color: #6c757d;">
                <i class="bi bi-ticket"></i> TICKETS
            </a>
            <a href="@Url.Action("Settings", "Admin")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-gear"></i> ACCOUNT SETTINGS
            </a>
            <a asp-action="SignOutUser" asp-controller="Account" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-box-arrow-right"></i> LOGOUT
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div style="flex: 1; padding: 20px; background-color: #D9D9D9;">
        <div style="background-color: #fff; padding: 20px; border: 1px solid #e0e0e0; border-radius: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); display: flex; align-items: center; justify-content: space-between; margin-bottom: 20px;">
            <h2 style="margin: 0; font-weight: bold; font-size: 30px;">TICKET DETAILS</h2>
            <a href="@Url.Action("Tickets", "Admin")" style="text-decoration: none;">
                <div style="width: 103px; height: 45px; background-color: #E68D4F; border-radius: 5px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); display: flex; align-items: center; justify-content: center;">
                    <h3 style="margin: 0; font-size: 20px; color: #000;">Back</h3>
                </div>
            </a>
        </div>

        <!-- Additional Content -->
        <div style="display: flex; gap: 20px;">
             <div style="background-color: #fff; width:350px; height:83%; border: 1px solid #e0e0e0; border-radius: 10px; padding: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <h2 style="margin-top:10px; color:#E68D4F; font-size:30px; font-weight:bold;">@ViewBag.Ticket.Title</h2>
                <h6 style="margin-top:20px; font-size:15px; font-weight:bold;">Date Created: @ViewBag.Ticket.DateCreated.ToShortDateString()</h6>
                <h6 style="margin-top:20px; font-size:15px; font-weight:bold;">Ticket ID: @ViewBag.Ticket.TicketId</h6>
                <h6 style="margin-top:20px; font-size:15px; font-weight:bold;">Requested By: @ViewBag.Ticket.CreatedBy</h6>
                <h6 style="margin-top:20px; font-size:15px; font-weight:bold;">Cateory: @ViewBag.Ticket.CategoryId</h6>
                <h6 style="margin-top:20px; font-size:15px; font-weight:bold;">Status: @ViewBag.Ticket.StatusId</h6>
                <h6 style="margin-top:20px; font-size:15px; font-weight:bold;">Priority: @ViewBag.Ticket.PriorityId</h6>
                <div style="margin-top: 10px; border-bottom: 2px solid #e0e0e0; width: 100%;"></div>
                <p style="margin-top:15px; font-size:20px; font-weight:bold; color: #6D6D6D;">Make Changes:</p>
                <div style="display: flex; flex-direction:row; margin-top: 20px;">
                    <p style="font-size:15px; font-weight:bold;">Assignee:</p>
                    <div style="margin-left:15px;">
                        <select style="padding:2px; width:225px; height:29px; border:none; background-color: #FFD98F; border-radius:20px;">
                            <option disabled selected value="">Assignee</option>
                            @foreach (var agent in ViewBag.SupportAgents as SelectList)
                            {
                                <option value="@agent.Value">@agent.Text</option>
                            }
                        </select>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div style="display: flex; justify-content: space-between; margin-top: 25px;">
                    <button style="padding: 10px 20px; background-color: #fff; border: 2px solid #E68D4F; border-radius: 5px; font-weight:bold; cursor: pointer;">Cancel</button>
                    <button style="padding: 10px 10px; background-color: #E68D4F; color: #000; border: none; border-radius: 5px; font-weight:bold; cursor: pointer;">Save Changes</button>
                </div>
            </div>
            <!-- Other Additional Content -->
            <div style="display:flex; flex-direction: column;">
                <div style="background-color: #fff; width:350px; height:330px; border: 1px solid #e0e0e0; border-radius: 10px; padding: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                    <div style="display:flex; flex-direction: row; align-items:start;">
                        <img src="~/img/issue.svg" style="width: 19px; height: auto;" alt="logo"/>
                        <p style="margin-left:15px; font-size:20px; font-weight:bold; color: #E68D4F;">Issue Description</p>
                    </div>
                    <p style="font: 18px;">@ViewBag.Ticket.Description</p>
                </div>
                <div style="margin-top: 20px; background-color: #fff; width:350px; height:153px; border: 1px solid #e0e0e0; border-radius: 10px; padding: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                    <div style="display:flex; flex-direction: row; align-items:start;">
                        <img src="~/img/file.svg" style="width: 19px; height: auto;" alt="logo" />
                        <p style="margin-left:15px; font-size:20px; font-weight:bold; color: #E68D4F;">Attachment</p>
                    </div>
                </div>
            </div>
            <div style="background-color: #fff; width:300px; height:500px; border: 1px solid #e0e0e0; border-radius: 10px; padding: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <div style="display:flex; flex-direction: row;">
                    <img src="~/img/activity.svg" style="margin-bottom:10px; width: 21px; height: auto;" alt="logo" />
                    <p style="margin-left:15px; font-size:20px; font-weight:bold; color: #E68D4F;">Ticket Activity</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}
