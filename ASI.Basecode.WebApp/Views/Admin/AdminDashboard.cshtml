@{
    ViewData["Title"] = "Ticket Summary - SCS Help Desk";
}

<div style="display: flex; min-height: 100vh;">
    <!-- Sidebar -->
    <div style="width: 250px; background-color: #f8f9fa; ">
        <div style="padding: 15px;">
            <img src="~/img/SCS-Logo.png" alt="SCS Logo" style="max-width: 50px; margin-bottom: 10px;">
            <h5 style="margin-bottom: 20px;">SCS HELP DESK</h5>
        </div>
        <div>
            <a href="@Url.Action("SuperAdminDashboard", "SuperAdmin")" style="display: block; padding: 10px 15px; text-decoration: none; color: white; background-color: #6c757d;">
                <i class="bi bi-grid"></i> DASHBOARD
            </a>
            <a href="@Url.Action("UserList", "User")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-person"></i> USER LIST
            </a>
            <a href="@Url.Action("Index", "KnowledgeBase")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-book"></i> KNOWLEDGE BASE
            </a>
            <a href="@Url.Action("Index", "Tickets")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-ticket"></i> TICKETS
            </a>
            <a href="@Url.Action("Index", "AccountSettings")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-gear"></i> ACCOUNT SETTINGS
            </a>
            <a asp-action="SignOutUser" asp-controller="Account" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-box-arrow-right"></i> LOGOUT
            </a>
        </div>
    </div>
<div style="flex: 1; padding: 20px;">
    <div style="background-color: white; border-radius: 15px; padding: 30px;">
        <!-- Ticket Summary Section -->
        <div style="margin-bottom: 40px;">
            <h2 style="margin-bottom: 20px;">TICKET SUMMARY</h2>
            <div style="display: flex; align-items: center; margin-bottom: 20px;">
                <span style="margin-right: 10px;"> Sort by:</span>
                <select style="padding: 5px; border: 1px solid #ddd; border-radius: 4px;">
                    <option>Last 7 days</option>
                    <option>Last 30 days</option>
                    <option>Last 90 days</option>
                </select>
            </div>

            <!-- Chart Area -->
            <div style="width: 100%; height: 300px; background-color: #fff; border: 1px solid #e0e0e0; margin-bottom: 40px;">
            </div>
        </div>

        <!-- Feedback Section -->
        <div>
            <h2 style="margin-bottom: 20px;">CUSTOMER FEEDBACK</h2>
            <!-- Feedback Cards should be placed here-->
            <div style="margin-bottom: 20px;">
                <div style="background-color: #f8f9fa; border-radius: 5px; padding: 20px; margin-bottom: 20px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
                    <div style="height: 100px;"></div>
                </div>
                <div style="background-color: #f8f9fa; border-radius: 5px; padding: 20px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
                    <div style="height: 100px;"></div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}
