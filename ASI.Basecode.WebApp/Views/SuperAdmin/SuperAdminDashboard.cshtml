@model ASI.Basecode.Services.ServiceModels.TicketViewModel

@{
    ViewData["Title"] = "Super Admin Dashboard - SCS Help Desk";
}
<div style="display: flex; min-height: 100vh;">
    <!-- Sidebar -->
    <div style="width: 250px; background-color: #f8f9fa; ">
        <div style="padding: 15px;">
            <img src="~/img/SCS-Logo.png" alt="SCS Logo" style="max-width: 50px; margin-bottom: 10px;">
            <h5 style="margin-bottom: 20px;">SCS HELP DESK</h5>
        </div>
        <div>
            <a href="@Url.Action("SuperAdminDashboard", "SuperAdmin")" style="display: block; padding: 10px 15px; text-decoration: none; color: white; background-color: #6c757d;">
                <i class="bi bi-grid"></i> DASHBOARD
            </a>
            <a href="@Url.Action("UserList", "SuperAdmin")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-person"></i> USER LIST
            </a>
            <a href="@Url.Action("Knowledge", "SuperAdmin")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-book"></i> KNOWLEDGE BASE
            </a>
            <a href="@Url.Action("Tickets", "SuperAdmin")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-ticket"></i> TICKETS
            </a>
            <a href="@Url.Action("Settings", "SuperAdmin")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-gear"></i> ACCOUNT SETTINGS
            </a>
            <a asp-action="SignOutUser" asp-controller="Account" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-box-arrow-right"></i> LOGOUT
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div style="flex: 1; padding: 20px; background-color: #f8f9fa;">
        <div style="background-color: white; border-radius: 15px; padding: 30px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
            <!-- Ticket Summary Section -->
            <h2 style="margin-bottom: 20px; text-align: center; font-weight: bold;">Super Admin Ticket Summary</h2>

            <!-- Category Section -->
            <h3 style="margin-bottom: 10px; text-align: center;">Category</h3>
            <div style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: center; margin-bottom: 30px;">
                @foreach (var category in new[] {
                new { Icon = Url.Content("~/img/tickets.svg"), Count = Model.EnrollmentTickets, Label = "Enrollment Tickets" },
                new { Icon = Url.Content("~/img/tickets.svg"), Count = Model.GradesTickets, Label = "Grades Tickets" },
                new { Icon = Url.Content("~/img/tickets.svg"), Count = Model.OrganizationalTickets, Label = "Organizational Tickets" },
                new { Icon = Url.Content("~/img/tickets.svg"), Count = Model.InquiryTickets, Label = "Inquiry Tickets" },
                new { Icon = Url.Content("~/img/tickets.svg"), Count = Model.MiscellaneousTickets, Label = "Miscellaneous Tickets" }
                })
                {
                    <div style="flex: 1; min-width: 200px; max-width: 220px; background-color: #F1F1F1; padding: 20px; border-radius: 10px; text-align: center; box-shadow: 0 2px 5px rgba(0,0,0,0.1); transition: transform 0.2s, box-shadow 0.2s;">
                        <div style="display: flex; justify-content: center; align-items: center; margin-bottom: 10px;gap:8px">
                            <h3 style="font-size: 40px; color: #E68D4F; margin: 0;">@category.Count</h3>
                            <img src="@category.Icon" alt="@category.Label Icon" style="width: 40px; height: 40px;">
                        </div>
                        <p style="font-size: 14px; font-weight: bold; color: #6c757d; margin: 0;">@category.Label</p>
                    </div>
                }
            </div>


            <!-- Status Section -->
            <h3 style="margin-bottom: 10px; text-align: center;">Status</h3>
            <div style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: center; margin-bottom: 30px;">
                @foreach (var status in new[] {
                new { Icon = Url.Content("~/img/pending.svg"), Count = Model.OpenTickets, Label = "Open Tickets" },
                new { Icon = Url.Content("~/img/pending.svg"), Count = Model.PendingTickets, Label = "In Progress Tickets" },
                new { Icon = Url.Content("~/img/pending.svg"), Count = Model.ResolvedTickets, Label = "Resolved Tickets" },
                new { Icon = Url.Content("~/img/pending.svg"), Count = Model.ClosedTickets, Label = "Closed Tickets" }
                })
                {
                    <div style="flex: 1; min-width: 200px; max-width: 220px; background-color: #F1F1F1; padding: 20px; border-radius: 10px; text-align: center; box-shadow: 0 2px 5px rgba(0,0,0,0.1); transition: transform 0.2s, box-shadow 0.2s;">
                        <div style="display: flex; justify-content: center; align-items: center; margin-bottom: 10px;gap:8px">
                            <h3 style="font-size: 40px; color: #E68D4F; margin: 0;">@status.Count</h3>
                            <img src="@status.Icon" alt="@status.Label Icon" style="width: 40px; height: 40px;">
                        </div>
                        <p style="font-size: 14px; font-weight: bold; color: #6c757d; margin: 0;">@status.Label</p>
                    </div>
                }
            </div>


            <!-- Priority Section -->
            <h3 style="margin-bottom: 10px; text-align: center;">Priority</h3>
            <div style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: center; margin-bottom: 30px;">
                @foreach (var priority in new[] {
                new { Icon = Url.Content("~/img/closed.svg"), Count = Model.HighTickets, Label = "High Priority" },
                new { Icon = Url.Content("~/img/closed.svg"), Count = Model.MediumTickets, Label = "Medium Priority" },
                new { Icon = Url.Content("~/img/closed.svg"), Count = Model.LowTickets, Label = "Low Priority" },
                new { Icon = Url.Content("~/img/closed.svg"), Count = Model.GeneralTickets, Label = "General Tickets" }
                })
                {
                    <div style="flex: 1; min-width: 200px; max-width: 220px; background-color: #F1F1F1; padding: 20px; border-radius: 10px; text-align: center; box-shadow: 0 2px 5px rgba(0,0,0,0.1); transition: transform 0.2s, box-shadow 0.2s;">
                        <div style="display: flex; justify-content: center; align-items: center; margin-bottom: 10px; gap:8px">
                            <h3 style="font-size: 40px; color: #E68D4F; margin: 0;">@priority.Count</h3>
                            <img src="@priority.Icon" alt="@priority.Label Icon" style="width: 40px; height: 40px;">
                        </div>
                        <p style="font-size: 14px; font-weight: bold; color: #6c757d; margin: 0;">@priority.Label</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}
