@model ASI.Basecode.Services.ServiceModels.UserPreferencesViewModel

@{
    ViewData["Title"] = "Account Settings - SCS Help Desk";
}
@section styles {
    <link rel="stylesheet" href="~/css/adminSettings.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @* <title>@ViewBag.Title</title> *@
</head>
<body>
    <div style="display: flex; min-height: 100vh;">
        <!-- Sidebar -->
        <div style="width: 250px; background-color: #f8f9fa;">
            <div style="padding: 15px;">
                <img src="~/img/SCS-Logo.png" alt="SCS Logo" style="max-width: 50px; margin-bottom: 10px;">
                <h5 style="margin-bottom: 20px;">SCS HELP DESK</h5>
            </div>
            <div>
                <a href="@Url.Action("SuperAdminDashboard", "SuperAdmin")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                    <i class="bi bi-grid"></i> DASHBOARD
                </a>
                <a href="@Url.Action("UserList", "SuperAdmin")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                    <i class="bi bi-person"></i> USER LIST
                </a>
                <a href="@Url.Action("Knowledge", "SuperAdmin")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                    <i class="bi bi-book"></i> KNOWLEDGE BASE
                </a>
                <a href="@Url.Action("Tickets", "SuperAdmin")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                    <i class="bi bi-ticket"></i> TICKETS
                </a>
                <a href="@Url.Action("Settings", "SuperAdmin")" style="display: block; padding: 10px 15px; text-decoration: none; color: white; background-color: #6c757d;">
                    <i class="bi bi-gear"></i> ACCOUNT SETTINGS
                </a>
                <a asp-action="SignOutUser" asp-controller="Account" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                    <i class="bi bi-box-arrow-right"></i> LOGOUT
                </a>
            </div>
        </div>

        <!-- Content Section -->
        <div class="half-background"></div>

        <!-- Settings Preferences Section -->
        <div class="container settings-preferences p-3 shadow-sm rounded bg-light">
            <h2 class="mb-4 fw-bold">Settings & Preferences</h2>

            <!-- Ticket Views Section -->
            <div id="ticketViewsSection">
                <h5 class="mb-3 fw-semibold">Ticket View Preferences</h5>

                <!-- Bind Form to Edit Preferences -->
                <form asp-action="Edit" asp-controller="UserPreferences" method="post">
                    <input type="hidden" asp-for="UserId" />
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">Category Filter:</label>
                        <div class="col-sm-9">
                            <select asp-for="DefaultCategoryId" class="form-select">
                                <option value="1">Enrolment</option>
                                <option value="2">Grades</option>
                                <option value="3">Organizational</option>
                                <option value="4">Inquiry</option>
                                <option value="5">Miscellaneous</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">Status Filter:</label>
                        <div class="col-sm-9">
                            <select asp-for="DefaultStatusId" class="form-select">
                                <option value="1">Open</option>
                                <option value="2">In Progress</option>
                                <option value="3">Resolved</option>
                                <option value="4">Closed</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">Priority Filter:</label>
                        <div class="col-sm-9">
                            <select asp-for="DefaultPriorityId" class="form-select">
                                <option value="4">General</option>
                                <option value="1">High</option>
                                <option value="2">Medium</option>
                                <option value="3">Low</option>
                            </select>
                        </div>
                    </div>



                    <div class="d-flex justify-content-start mt-4">
                        <button type="reset" class="btn btn-outline-secondary me-2" style="margin-right: 10px;">Cancel</button>
                        <button type="submit" class="btn btn-warning">Save Changes</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</body>
</html>
