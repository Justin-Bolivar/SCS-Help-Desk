@{
    ViewData["Title"] = "SCS Help Desk";
}
@section styles {
    <link rel="stylesheet" href="~/css/studentDashboard.css" />
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        
    </style>
</head>
<body>
    <div class="banner">
        <a asp-action="SignOutUser" asp-controller="Account">
            <button class="btn btn-danger logout-btn shadow-lg">LOGOUT</button>
        </a>
        <img src="~/img/Banner.png" alt="Banner">
    </div>

    <div class="container my-4">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 text-center">
            <!-- Create Ticket Card -->
            <div class="col mb-4">
                <div class="card-custom card h-100 shadow-lg">
                    <div class="card-body">
                        <a href="@Url.Action("CreateTicket", "Student")" class="btn btn-dashboard w-100 shadow-lg">Create Ticket</a>
                        <p class="card-text mt-3">Need assistance or have an issue? Submit your request.</p>
                    </div>
                </div>
            </div>

            <!-- My Tickets Card -->
            <div class="col mb-4">
                <div class="card-custom card h-100 shadow-lg">
                    <div class="card-body">
                        <a href="@Url.Action("MyTickets", "Student")" class="btn btn-dashboard w-100 shadow-lg">My Tickets</a>
                        <p class="card-text mt-3">View and track your requests.</p>
                    </div>
                </div>
            </div>

            <!-- Knowledge Base Card -->
            <div class="col mb-4">
                <div class="card-custom card h-100 shadow-lg">
                    <div class="card-body">
                        <a href="@Url.Action("KnowledgeBase", "Student")" class="btn btn-dashboard w-100 shadow-lg">Knowledge Base</a>
                        <p class="card-text mt-3">View frequently asked questions.</p>
                    </div>
                </div>
            </div>

            <!-- Settings & Preferences Card -->
            <div class="col mb-4">
                <div class="card-custom card h-100 shadow-lg">
                    <div class="card-body">
                        <a href="@Url.Action("Settings", "Student")"  class="btn btn-dashboard w-100 shadow-lg">Settings and Preferences</a>
                        <p class="card-text mt-3">Customize your experience.</p>
                    </div>
                        
                </div>
            </div>
        </div>
    </div>


</body>
</html>
