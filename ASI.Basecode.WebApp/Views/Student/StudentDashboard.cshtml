@{
    ViewData["Title"] = "SCS Help Desk";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        .banner {
            background: url('Banner.png') no-repeat center;
            background-size: cover;
            color: white;
            text-align: center;
            position: relative;
        }

        .banner h2 {
            font-size: 1.5em;
        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 10px;
        }

        .campuses {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }

        .campuses div {
            font-size: 1em;
            text-align: center;
            color: black;
        }

        .button-section {
            display: flex;
            justify-content: space-around;
            padding: 20px 0;
            background-color: #f8f9fa;
        }

        .button {
            background-color: #e9ecef;
            padding: 20px;
            width: 200px;
            border-radius: 10px;
            text-align: center;
            cursor: pointer;
            transition: 0.3s;
        }

        .button:hover {
            background-color: #dee2e6;
        }

        .button h3 {
            margin: 0;
            font-size: 1.2em;
        }

        .button p {
            margin-top: 10px;
            color: #6c757d;
        }

        .logout-btn {
            position: absolute;
            top: 10px;  
            right: 40px;
            background-color: red;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .adelante-badge {
            background-color: #28a745;
            color: white;
            padding: 5px 15px;
            border-radius: 5px;
            margin-top: 15px;
        }

    </style>
</head>
<body>
    <div class="banner">
        <a asp-action="SignOutUser" asp-controller="Account" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
            <button class="logout-btn">LOGOUT</button>
        </a>
        <img src="~/img/Banner.png" alt="Banner">
        </div>
    </div>

    <div class="button-section">
        <div class="button" onclick="window.location.href='CreateTicket.cshtml'">
            <h3>Create Ticket</h3>
            <p>Need assistance or have an issue? Submit your request.</p>
        </div>
        <div class="button" onclick="window.location.href='MyTickets.cshtml'">
            <h3>My Tickets</h3>
            <p>View and track your requests.</p>
        </div>
        <div class="button" onclick="window.location.href='KnowledgeBase.cshtml'">
            <h3>Knowledge Base</h3>
            <p>View frequently asked questions.</p>
        </div>
        <div class="button" onclick="window.location.href='Settings.cshtml'">
            <h3>Settings & Preferences</h3>
            <p>Customize your experience.</p>
        </div>
    </div>
</body>
</html>
