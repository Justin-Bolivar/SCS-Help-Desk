@model IEnumerable<ASI.Basecode.Services.ServiceModels.KnowledgeBaseViewModel>

@{
    ViewData["Title"] = "Knowledge Base Articles";
}

<h1>Knowledge Base</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td>@article.CategoryName</td>
                <td>@article.CreatedAt.ToString("g")</td>
                <td>
                    <a asp-action="EditKnowledgebase" asp-route-id="@article.ArticleId" class="btn btn-primary">Edit</a>
                    <a asp-action="DeleteKnowledgebase" asp-route-id="@article.ArticleId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateKnowledgebase" class="btn btn-success">Create New Article</a>
