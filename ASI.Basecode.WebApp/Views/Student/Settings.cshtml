@{
    ViewData["Title"] = "SCS Help Desk";
}
@section styles {
    <link rel="stylesheet" href="~/css/settings.css" />
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        <nav class="navbar bg-body-tertiary shadow-lg">
            <a class="navbar-brand" href="#">
                <img src="~/img/scsHelpDeskLogo.svg" alt="Bootstrap" class="scsLogo">
            </a>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="@Url.Action("StudentDashboard", "Student")" class="btn btn-custom me-md-2 mr-5" role="button">Back to Homepage</a>
                <a asp-action="SignOutUser" asp-controller="Account" class="btn btn-danger logout-btn shadow-lg" type="button">Logout</a>
            </div>
        </nav>
    </div>

    <div class="half-background "></div>
    <div class="container settings-preferences  p-3 shadow-sm rounded bg-light">
        <h2 class="mb-4 fw-bold">Settings & Preferences</h2>


        <!-- Ticket Views Section -->
        <div id="ticketViewsSection">
            <h5 class="mb-3 fw-semibold">Ticket View Preferences</h5>
            <form>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Category Filter:</label>
                    <div class="col-sm-9">
                        <select class="form-select">
                            <option>Enrolment</option>
                            <option>Grades</option>
                            <option>Organizational</option>
                            <option>Inquiry</option>
                            <option>Miscellaneous</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Status Filter:</label>
                    <div class="col-sm-9">
                        <select class="form-select">
                            <option>Open</option>
                            <option>In Progress</option>
                            <option>Resolved</option>
                            <option>Closed</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Priority Filter:</label>
                    <div class="col-sm-9">
                        <select class="form-select">
                            <option>General</option>
                            <option>High</option>
                            <option>Medium</option>
                            <option>Low</option>
                        </select>
                    </div>
                </div>
                

                <div class="d-flex justify-content-start mt-4">
                    <button type="reset" class="btn btn-outline-secondary me-2" style="margin-right: 10px;">Cancel</button>
                    <button type="submit" class="btn btn-warning">Save Changes</button>
                </div>
            </form>
        </div>
    </div>

</body>
</html>

