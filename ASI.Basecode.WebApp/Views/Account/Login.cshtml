@model LoginViewModel
@using static ASI.Basecode.Resources.Views.Screen
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Login Page";
}
<div>
    @Html.AntiForgeryToken()
</div>

<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="row justify-content-center w-100">
        
        <div class="card shadow-lg border-0" style="max-width: 1100px; width: 100%;">
            <div class="row g-0">
                
                <div class="col-md-6 d-flex flex-column justify-content-center align-items-center text-center p-5">
                    <div class="card-body w-100" style="max-width: 450px;">
                        
                        <img src="~/img/scsHelpDeskLogo.svg" alt="SCS Help Desk Logo" style="width: 150px; margin-bottom: 20px;" />
                        
                        <form method="post" action="/Account/Login" id="loginForm">
                            
                            <div class="form-group mb-4 position-relative">
                                <label class="form-label" for="emailInput"><b>Email</b></label>
                                <div class="position-relative">
                                    <input type="text" id="emailInput" class="form-control pl-5" asp-for="UserId" placeholder="Enter your email" style="height: 45px;" />
                                    <span class="position-absolute" style="top: 50%; left: 10px; transform: translateY(-50%);">
                                        <i class="fa fa-envelope"></i>
                                    </span>
                                </div>
                                <span asp-validation-for="UserId" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group mb-4 position-relative">
                                <label class="form-label" for="passwordInput"><b>Password</b></label>
                                <div class="position-relative">
                                    <input type="password" id="passwordInput" class="form-control pl-5" asp-for="Password" placeholder="Enter your password" style="height: 45px;" />
                                    <span class="position-absolute" style="top: 50%; left: 10px; transform: translateY(-50%);">
                                        <i class="fa fa-lock"></i>
                                    </span>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            
                            <div class="d-flex justify-content-between mb-4">
                                <a class="text-muted" href="#!">Forgot Password?</a>
                            </div>
                            
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-primary-custom" style="color: white; padding: 10px 0; width: 100%;" type="submit">Login</button>
                            </div>
                            
                            <div class="d-flex flex-column align-items-center justify-content-center mt-4">
                                <hr style="width: 100%; border-top: 1px solid #ddd;" />
                                <p class="mb-0 mt-1"><b>Don't have an account?</b></p>
                                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-custom mt-2" style="width: 100%;">
                                    Create an Account
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
                
                <div class="col-md-6 d-none d-md-block">
                    <img src="~/img/scsBasakCampus.svg" alt="Basak Campus" class="img-fluid" style="height: 100%; object-fit: cover;" />
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}
